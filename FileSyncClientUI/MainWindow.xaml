<Window x:Class="FileSyncClientUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSyncClientUI" xmlns:uicommon="clr-namespace:UICommon;assembly=UICommon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <uicommon:InvertBoolValueConverter x:Key="InvertBoolValueConverter1"></uicommon:InvertBoolValueConverter>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.Resources>
            <Style TargetType="FrameworkElement">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="服务器" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=Host,Mode=TwoWay}" VerticalAlignment="Center"/>

        <Label Content="端口" Grid.Row="1" Grid.Column="0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=Port,Mode=TwoWay}" VerticalAlignment="Center"/>

        <Label Content="本地文件夹" Grid.Row="2" Grid.Column="0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Path=Folder,Mode=TwoWay}" VerticalAlignment="Center"/>

        <Label Content="时间间隔" Grid.Row="3" Grid.Column="0"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Path=Interval,Mode=TwoWay}" VerticalAlignment="Center"/>

        <Label Content="是否加密" Grid.Row="4" Grid.Column="0"/>
        <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding Path=Encrypt,Mode=TwoWay}" VerticalAlignment="Center"/>

        <Label Content="加密密钥" Grid.Row="5" Grid.Column="0"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Path=EncryptKey,Mode=TwoWay}" VerticalAlignment="Center"/>

        <Label Content="验证码" Grid.Row="6" Grid.Column="0"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Path=Password,Mode=TwoWay}" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="7" Grid.Column="1">
            <Button Content="启动" IsEnabled="{Binding Path=IsConnected,Converter={StaticResource InvertBoolValueConverter1}}" Command="{Binding Path=Start}" Margin="0,3"></Button>
            <Button Content="停止" IsEnabled="{Binding Path=IsConnected}" Command="{Binding Path=Stop}" Margin="0,3"></Button>
        </StackPanel>
    </Grid>
</Window>
