<Window x:Class="FileSyncClientUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
        xmlns:local="clr-namespace:FileSyncClientUI" 
        xmlns:uicommon="clr-namespace:UICommon;assembly=UICommon" 
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <uicommon:InvertBoolValueConverter x:Key="InvertBoolValueConverter1"></uicommon:InvertBoolValueConverter>
    </Window.Resources>
    <dx:DXTabControl ItemsSource="{Binding Path=Clients}">
        <dx:DXTabControl.ItemTemplate>
            <DataTemplate>
                <dxlc:LayoutControl>
                    <dxlc:LayoutGroup>
                        <dxlc:LayoutItem Label="服务器">
                            <dxe:TextEdit></dxe:TextEdit>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutControl>
            </DataTemplate>
           
        </dx:DXTabControl.ItemTemplate>
    </dx:DXTabControl>
</Window>
